
@model List<TurmaModel>


@if(TempData["MensagemSucesso"] != null)
{
<div class="alert alert-success text-dark" role="alert">
    @TempData["MensagemSucesso"]

</div>
}

@if(TempData["MensagemErro"] != null)
{
<div class="alert alert-danger text-dark" role="alert">
    @TempData["MensagemErro"]

</div>
}



<div class="mb-5 d-flex justify-content-between align-items-center">
    <h1>Listagem de Turmas</h1>
    <a class="btn btn-success" asp-action="CadastrarTurma" asp-controller="Turma">Cadastro de Turma</a>

</div>

<table class="table table-striped table-bordered" id="registros">
    <thead class="table-dark">

        <tr>
        <th scope="col">Id</th>
        <th scope="col">Descrição</th>
        <th scope="col">Modalidade</th>
        <th scope="col">Turno</th>
        <th scope="col">Professores</th>
        <th scope="col">Alunos</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var turma in Model)
        {
            <tr>
                <th scope="row">@turma.Id</th>
                <td scope="row">@turma.Descricao</td>
                <td scope="row">@turma.Modalidade</td>
                <td scope="row">@turma.Turno</td>
                <td><a href="#" id="professores" data-idturma="@turma.Id" data-nometurma="@turma.Descricao">Professores</a></td>
                <td><a href="#" id="alunos" data-idturma="@turma.Id" data-nometurma="@turma.Descricao">Alunos</a></td>
            </tr>
        }
       
    </tbody>
</table>

               @*  Criação de modal, a div do modal do vai aparecer, quando botão for clicado *@

<div class="modal fade" id="modalProfessores" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="textModalProfessores"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <table>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>Matéria</th>
                            <th>Email</th>                           
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

                                       @* Modal de ALunos *@

<div class="modal fade" id="modalAlunos" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="textModalAlunos"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <table>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Matrícula</th>
                            <th>Nome</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
